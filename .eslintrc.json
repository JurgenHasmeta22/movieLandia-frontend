{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["standard-with-typescript", "plugin:react/recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "indent": ["warning", 4],
        "quotes": ["warning", "double"],
        // "semi": ["error", "always"],
        "no-unused-vars": 1,
        "no-const-assign": 1,
        "no-var": 1,
        "prefer-const": 1,
        "react/prop-types": "off",
        "no-else-return": 1,
        "no-undef": 1,
        "no-use-before-define": 1,
        "curly": 1,
        "eqeqeq": 1,
        "no-implicit-coercion": 1,
        "no-multi-spaces": 1,
        "array-callback-return": 1
    }
}
